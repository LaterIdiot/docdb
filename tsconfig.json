{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "watch": true,
    "lib": ["ES2020"],
    "outDir": "dist",
    "moduleResolution": "Node",
    "allowJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false
  },
  "include": ["src"],
  "compileOnSave": true
}
